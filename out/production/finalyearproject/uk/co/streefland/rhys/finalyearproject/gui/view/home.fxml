<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import java.net.URL?>
<BorderPane styleClass="root" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="uk.co.streefland.rhys.finalyearproject.gui.controller.HomeController">
    <top>
        <VBox alignment="center">
            <MenuBar fx:id="menuBar">
                <menus>
                    <Menu text="File">
                        <items>
                            <MenuItem text="New"/>
                            <MenuItem text="Open"/>
                            <MenuItem text="Save"/>
                            <MenuItem text="Save As"/>
                            <SeparatorMenuItem/>
                            <MenuItem text="Exit"/>
                        </items>
                    </Menu>
                    <Menu text="Conversations">
                        <MenuItem text="New" onAction="#newConversation"/>
                    </Menu>
                </menus>
            </MenuBar>
        </VBox>
    </top>
    <center>
        <GridPane alignment="center">

            <ListView fx:id="listView" maxWidth="100" GridPane.columnIndex="1"
                      GridPane.rowIndex="1">
            </ListView>
            <ScrollPane fx:id="scrollPane" fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER" GridPane.columnIndex="2"
                        GridPane.halignment="RIGHT" GridPane.hgrow="ALWAYS" GridPane.rowIndex="1"
                        GridPane.vgrow="ALWAYS">
                <GridPane fx:id="textPane"></GridPane>
            </ScrollPane>
            <columnConstraints>
                <ColumnConstraints/>
                <ColumnConstraints/>
                <ColumnConstraints/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints/>
                <RowConstraints/>
            </rowConstraints>
        </GridPane>
    </center>
    <bottom>
        <GridPane alignment="center" hgap="10" styleClass="menu-bar" vgap="10">
            <Text fx:id="status" styleClass="info" text="Rhys Streefland (2016)" GridPane.columnIndex="1"
                  GridPane.halignment="LEFT" GridPane.hgrow="ALWAYS"/>
            <ImageView fx:id="spinner" fitHeight="40.0" fitWidth="48.0" pickOnBounds="true" preserveRatio="true"
                       visible="false" GridPane.columnIndex="2">
                <image>
                    <Image url="@../spin.gif"/>
                </image>
            </ImageView>
            <columnConstraints>
                <ColumnConstraints/>
                <ColumnConstraints/>
                <ColumnConstraints/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints/>
            </rowConstraints>
        </GridPane>
    </bottom>
    <stylesheets>
        <URL value="@../style.css"/>
    </stylesheets>
</BorderPane>
