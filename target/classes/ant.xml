<project name="finalyearproject" default="init" basedir="../../../">
    <description>
        increments a build variable
    </description>
    <!-- set global properties for this build -->
    <property name="src" location="../"/>

    <target name="init">
        <buildnumber/>
        <replaceregexp file="src/main/java/uk/co/streefland/rhys/finalyearproject/core/LocalNode.java"
                       match="private\s+static\s+final\s+String\s+BUILD_NUMBER\s+=\s+&quot;.*&quot;;"
                       replace="private static final String BUILD_NUMBER = &quot;${build.number}&quot;;"
                       byline="true"
        />
    </target>
</project>