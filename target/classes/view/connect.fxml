<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import java.net.URL?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<BorderPane fx:id="borderPane" onKeyPressed="#handleKeyPressed" styleClass="border-pane"
            xmlns="http://javafx.com/javafx/8.0.112-ea" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="uk.co.streefland.rhys.finalyearproject.gui.controller.ConnectController">
    <center>
        <VBox alignment="CENTER" spacing="10">
            <FlowPane rowValignment="CENTER" hgap="10" vgap="10" alignment="CENTER">
                <ImageView GridPane.columnIndex="1" GridPane.rowIndex="1">
                    <Image url="/icon1_75.png" />
                </ImageView>
                <Label styleClass="label-bigheader" text="Shortcut Messenger" wrapText="true" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
            </FlowPane>
        <GridPane alignment="center" hgap="20" vgap="20">

            <Label styleClass="label-header" text="Connect to the network" GridPane.columnIndex="1"
                   GridPane.columnSpan="2" GridPane.rowIndex="1"/>

            <Label text="Network address:" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

            <TextField fx:id="networkIpField" GridPane.columnIndex="2" GridPane.rowIndex="2"/>

            <HBox alignment="bottom_right" spacing="10" GridPane.columnIndex="2" GridPane.rowIndex="3">
                <Button fx:id="connectButton" onAction="#handleConnectButtonAction" text="Connect"/>
                <Button fx:id="advancedButton" text="Advanced"/>
            </HBox>
            <columnConstraints>
                <ColumnConstraints/>
                <ColumnConstraints/>
                <ColumnConstraints/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints/>
                <RowConstraints/>
                <RowConstraints/>
                <RowConstraints/>
                <RowConstraints/>
            </rowConstraints>
        </GridPane>
            <Text fx:id="errorText" fill="RED" styleClass="info"/>
        </VBox>
    </center>
    <stylesheets>
        <URL value="@../style.css"/>
    </stylesheets>
</BorderPane>
