<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import java.net.URL?>
<BorderPane fx:id="borderPane" onKeyPressed="#handleKeyPressed" styleClass="border-pane"
            xmlns="http://javafx.com/javafx/8.0.112-ea" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="uk.co.streefland.rhys.finalyearproject.gui.controller.ConnectController">
    <center>

        <VBox alignment="CENTER" spacing="20">
        <GridPane alignment="center" hgap="10" vgap="10">
            <Label styleClass="label-bigheader" text="FinalYearProject" GridPane.columnIndex="1" GridPane.columnSpan="2"
                   GridPane.rowIndex="1" GridPane.valignment="CENTER"></Label>

            <Label styleClass="label-header" text="Connect to the network" GridPane.columnIndex="1"
                   GridPane.columnSpan="2" GridPane.rowIndex="2"/>

            <Label text="Network address:" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

            <TextField fx:id="networkIpField" GridPane.columnIndex="2" GridPane.rowIndex="3"/>

            <HBox alignment="bottom_right" spacing="10" GridPane.columnIndex="2" GridPane.rowIndex="4">
                <Button fx:id="connectButton" onAction="#handleConnectButtonAction" text="Connect"/>
            </HBox>
            <columnConstraints>
                <ColumnConstraints/>
                <ColumnConstraints/>
                <ColumnConstraints/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints/>
                <RowConstraints/>
                <RowConstraints/>
                <RowConstraints/>
                <RowConstraints/>
            </rowConstraints>
        </GridPane>
            <Text fx:id="errorText" fill="RED" styleClass="info"/>
        </VBox>
    </center>
    <stylesheets>
        <URL value="@../style.css"/>
    </stylesheets>
</BorderPane>
