<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import java.net.URL?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.geometry.Insets?>
<BorderPane onKeyPressed="#handleKeyPressed" styleClass="border-pane" xmlns="http://javafx.com/javafx/8.0.60"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="uk.co.streefland.rhys.finalyearproject.gui.controller.LoginController">
    <center>
        <VBox alignment="CENTER" spacing="10">
            <FlowPane hgap="10" vgap="10" alignment="CENTER">
                <ImageView GridPane.columnIndex="1" GridPane.rowIndex="1">
                    <Image url="/graphics/logo.png" />
                </ImageView>
                <Label styleClass="label-bigheader" text="Shortcut Messenger" wrapText="true" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
            </FlowPane>
            <GridPane alignment="center" hgap="20" vgap="10">
                <Label styleClass="label-header" text="Please log in" GridPane.columnIndex="1" GridPane.columnSpan="2"
                       GridPane.rowIndex="1"/>

                <Label text="User Name:" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                <TextField fx:id="userNameField" GridPane.columnIndex="2" GridPane.rowIndex="2"/>

                <Label text="Password:" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

                <PasswordField fx:id="passwordField" GridPane.columnIndex="2" GridPane.rowIndex="3"/>

                <HBox alignment="bottom_right" spacing="10" GridPane.columnIndex="2" GridPane.rowIndex="4">
                    <Button fx:id="registerButton" onAction="#handleRegisterButtonAction" text="Register"/>
                    <Button fx:id="loginButton" onAction="#handleLoginButtonAction" text="Log in"/>
                </HBox>

                <stylesheets>
                    <URL value="@../style.css"/>
                </stylesheets>
            </GridPane>
            <Text fx:id="errorText" fill="RED" styleClass="info"/>
        </VBox>
    </center>
    <bottom>
        <HBox alignment="BOTTOM_RIGHT">
            <ImageView fx:id="loader" visible="false">
                <Image url="/graphics/loader.gif"/>
                <HBox.margin>
                    <Insets top="-100" bottom="10.0" right="10.0" />
                </HBox.margin>
            </ImageView>
        </HBox>
    </bottom>
    <stylesheets>
        <URL value="@../style.css"/>
    </stylesheets>
</BorderPane>